<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="@drawable/backgrd"
    tools:context="com.example.yugandhara.dumbcharades.HomeScreen">

    <ImageView
        android:src="@drawable/homepage"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        />

    <ImageButton
        android:background="@drawable/gamemode"
        android:id="@+id/game_mode"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:onClick="gameMode"/>

    <ImageButton
        android:background="@drawable/arcademode"
        android:id="@+id/arcade_mode"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Arcade Mode"
        android:onClick="arcadeMode"
        />

</LinearLayout>
